# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to git - it contains sensitive information

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# Development Database (for local development)
# This should point to appello-tasks-dev database, NOT production
# Get your connection string from MongoDB Atlas Dashboard:
# 1. Go to Atlas Dashboard > Clusters > Connect
# 2. Choose "Connect your application"
# 3. Copy the connection string and replace <password> with your actual password
# 4. Change database name to "appello-tasks-dev"
MONGODB_DEV_URI=mongodb+srv://username:password@cluster-name.mongodb.net/appello-tasks-dev?retryWrites=true&w=majority

# Production Database (read-only reference, used for schema sync)
# DO NOT use this for local development - use MONGODB_DEV_URI instead
MONGODB_URI=mongodb+srv://username:password@cluster-name.mongodb.net/appello-tasks-prod?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@appello.com
SMTP_PASS=your-email-password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Integration with Main Appello Platform (optional)
APPELLO_API_BASE_URL=https://api.appello.com
APPELLO_API_KEY=your-appello-api-key

# WebSocket Configuration
SOCKET_IO_ORIGINS=http://localhost:3000,https://app.appello.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

