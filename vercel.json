{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "src/client/dist"
      }
    },
    {
      "src": "src/server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/server/**"],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/src/server/index.js"
    },
    {
      "source": "/socket.io/(.*)",
      "destination": "/src/server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "unsafe-none"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
