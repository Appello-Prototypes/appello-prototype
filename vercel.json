{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "src/client/dist"
      }
    },
    {
      "src": "src/server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/server/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/server/index.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/src/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/src/client/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/server/index.js": {
      "maxDuration": 30
    }
  }
}
