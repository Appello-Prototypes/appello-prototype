{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "src/client/dist"
      }
    },
    {
      "src": "src/server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/server/**"],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/server/index.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/src/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/src/client/dist/$1"
    }
  ],
