{
  "name": "appello-task-management",
  "version": "1.1.0",
  "description": "Task management module for Appello ICI contractor platform",
  "main": "src/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server/index.js",
    "dev:client": "cd src/client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd src/client && npm install && npm run build",
    "build:server": "echo 'Server build not required for Node.js'",
    "start": "node src/server/index.js",
    "vercel-build": "npm run build:client",
    "seed": "node scripts/seed.js",
    "reseed": "node scripts/seed.js",
    "seed:progress-reports": "node scripts/seed-field-progress-reports.js",
    "fix:progress-reports": "node scripts/fix-progress-report-summaries.js",
    "seed:fresh": "node scripts/seed-complete-fresh.js",
    "seed:both": "node scripts/seed-both-databases.js",
    "seed:tasks": "node scripts/seed-tasks-for-three-jobs.js",
    "db:sync": "node scripts/sync-db-schema.js prod-to-dev",
    "db:sync-data": "node scripts/sync-db-data.js",
    "db:indexes": "node scripts/create-indexes.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:local": "playwright test --project=local",
    "test:e2e:production": "playwright test --project=production",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.3.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.56.1",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "task-management",
    "construction",
    "field-operations",
    "project-management",
    "appello"
  ],
  "author": "Appello Inc.",
  "license": "PROPRIETARY"
}
